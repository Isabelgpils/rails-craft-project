<main class= "container" >
  <%= form_with(model: dmc) do |form| %>
    <% if dmc.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(dmc.errors.count, "error") %> prohibited this dmc from being saved:</h2>

        <ul>
          <% dmc.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :number, style: "display: block" %>
      <%= form.text_field :number %>
    </div>

    <div>
      <%= form.label :color, style: "display: block" %>
      <%= form.text_field :color %>
    </div>

    <div>
      <%= form.label :rgb_value, style: "display: block" %>
      <%= form.text_field :rgb_value %>
    </div>

    <div>
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :image %>
    </div>

    <div>
      <%= form.label :stash, style: "display: block" %>
      <%= form.text_field :stash %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</main>
