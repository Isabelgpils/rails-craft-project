<div class="container">
  <h2 class="display-5 mt-5 pt-5 mb-3">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, data: { turbo: false }) do |f| %>
    <div class= "col-lg-4 col-sm-6">
      <div class="field">
        <%= f.label :email, class: "form-label mt-2" %><br />
        <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label mt-2"%><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "mt-2" %>
        </div>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-info mt-3 mb-5", data: { turbo: false } %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
