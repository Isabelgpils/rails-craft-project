<div class="container">
  <%= form_with(model: metallic) do |form| %>
    <% if metallic.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(metallic.errors.count, "error") %> prohibited this metallic from being saved:</h2>
        <ul>
          <% metallic.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :brand, style: "display: block" %>
      <%= form.text_field :brand %>
    </div>

    <div>
      <%= form.label :thread_type, style: "display: block" %>
      <%= form.text_field :type %>
    </div> 

    <div>
      <%= form.label :number, style: "display: block" %>
      <%= form.text_field :number %>
    </div>

    <div>
      <%= form.label :color, style: "display: block" %>
      <%= form.text_field :color %>
    </div>

    <div>
      <%= form.label :patterns, style: "display: block" %>
      <%= form.text_field :patterns, multiple: true %>
    </div>

    <div>
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :image %>
    </div>
    <div>
      <%= form.label :stash, style: "display: block" %>
      <%= form.text_field :stash %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
