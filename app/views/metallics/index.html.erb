<div class="container">
  <p style="color: green"><%= notice %></p>
  <h6 class="display-6 mt-5 pt-5 mb-3 text-align-center"> Metallic Threads <%= link_to "Add New Metallic", new_metallic_path, class: "btn btn-outline-secondary ms-5" %> </h6>
  <div class="row align-items-start">
    <% @metallics.sort_by{|metallic| metallic.number}.each do |metallic| %>
      <div class="col-lg-3 col-md-4 col-sm-12">
        <div class="card-deck">
          <div id="metallics" class="card mb-5 text-center" style="width: 12rem;">
            <% if metallic.image.present? %>
              <%= image_tag metallic.image, class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">  
                <%= "#{metallic.thread_type} #{metallic.number}"%>
              </h5>
              <p class="card-text"><%= metallic.brand %></p> 
            </div>
            <p>
              <%= link_to "Show this metallic", metallic, class: "btn btn-outline-secondary" %>
            </p>
          </div> 
        </div>
      </div>
    <% end %>
</div>
