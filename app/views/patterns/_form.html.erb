<div class="container">
  <%= form_with(model: pattern) do |form| %>
    <% if pattern.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(pattern.errors.count, "error") %> prohibited this pattern from being saved:</h2>

        <ul>
          <% pattern.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :brand, style: "display: block" %>
      <%= form.text_field :brand %>
    </div>

    <div>
      <%= form.label :pattern_name, style: "display: block" %>
      <%= form.text_field :pattern_name%>
    </div>

    <div>
      <%= form.label :number, style: "display: block" %>
      <%= form.text_field :number %>
    </div>
    <div>
      <%= form.label :size, style: "display: block" %>
      <%= form.text_field :size %>
    </div>

    <div>
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :image %>
    </div>

    <div>
      <%# <%= form.label :user_id, style: "display: block" %> 
      <%= form.number_field :user_id, id: :pattern_user_id, type: :hidden, value: current_user.id %>
    </div>

    <div class="pt-3">
      <%= form.submit %>
    </div>
  <% end %>
</div>
