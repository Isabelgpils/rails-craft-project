<div class="container">
  <%= form_with(model: pattern) do |form| %>
    <% if pattern.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(pattern.errors.count, "error") %> prohibited this pattern from being saved:</h2>

        <ul>
          <% pattern.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :brand, style: "display: block" %>
      <%= form.text_field :brand %>
    </div>

    <div>
      <%= form.label :number, style: "display: block" %>
      <%= form.text_field :number %>
    </div>

    <div>
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :image %>
    </div>

    <div>
      <%= form.label :stash, style: "display: block" %>
      <%= form.text_field :stash %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>