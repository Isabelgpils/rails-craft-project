<div class="container mt-5 pt-5">
  <p style="color: green"><%= notice %></p>
  <div class="card mb-3" style="max-width: 1200px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <% if @pattern.image.present?%>
          <%= image_tag @pattern.image, class: "card-img p-3" %>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h3 class="card-title"><%= @pattern.pattern_name%></h3>
          <h5 class="card-text"><%= "#{@pattern.brand} #{@pattern.number}"%></h5>
          <p class="card-text"><%= "Size: #{@pattern.size}"%></p>
          <p class="card-text">
            <h5>Metallic Threads</h5>
            <% metallics = Metallic.all %>
            <% metallics.each do |metallic| %>
              <% if "#{@pattern.pattern_name}".in? "#{metallic.pattern}" %>
                <ul>
                  <li><%= link_to "#{metallic.thread_type} #{metallic.number}", metallic %>
                    <% if metallic.image.present? %>
                      <%= image_tag metallic.image, class: "thumbnail float-start", style: "width: 30px; height: 30px;"%>
                    <% end %>
                  </li>            
                </ul>
              <%end%>
            <% end %>
          </p>
          <p class="card-text">
            <h5>Beads</h5>
            <% beads = Bead.all %>
            <% beads.each do |bead| %>
              <% if "#{@pattern.pattern_name}".in? "#{bead.pattern}" %>
                <ul>
                  <li><%= link_to "DB #{bead.number}", bead %>                
                    <% if bead.image.present? %>
                      <%= image_tag bead.image, class: "thumbnail float-start", style: "width: 30px; height: 30px;"%>
                    <% end %>
                  </li>            
                </ul>
              <% end %>
            <% end %>        
          </p>
          <p class="card-text">
            <h5>Silks</h5>
            <% silks = Silk.all %>
            <% silks.each do |silk| %>
              <% if "#{@pattern.pattern_name}".in? "#{silk.pattern}" %>
                <ul>
                  <li><%= link_to "#{silk.brand} #{silk.number}", silk %>                
                    <% if silk.image.present? %>
                      <%= image_tag silk.image, class: "thumbnail float-start", style: "width: 30px; height: 30px;"%>
                    <% end %>
                  </li>            
                </ul>
              <% end %>
            <% end %>        
          </p>
        <div class="pb-5">
          <%= link_to "Edit Pattern", edit_pattern_path(@pattern), class: "btn btn-secondary float-start" %>
          <%= button_to "Delete Pattern", @pattern , method: :delete, class: "btn btn-outline-danger ms-3 float-start" %> 
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to "Back to patterns", patterns_path, class: "btn btn-info" %>
