<div class="container">
  <p style="color: green"><%= notice %></p>
  <div class= "row mt-5 pt-5 pb-5">
    <div class="col-lg-6 col-md-4 col-sm-6">
      <h6 class= "display-5">Beads</h6>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6">
      <h5>
        <%= link_to "Add New Bead", new_bead_path, class: "btn btn-secondary" %>
      </h5>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-6">
      <h5><%= render 'beads/search_form' %></h5>
    </div>
  </div>
  <div class="row align-items-start">
    <% @beads.sort_by{|bead| bead.number}.each do |bead| %>
      <div class="col-lg-3 col-md-4 col-sm-12">
        <div class="card-deck">
          <div id="beads" class="card mb-5 text-center" style="width: 12rem;">
            <% if bead.image.present? %>
              <%= image_tag bead.image, class: "card-img" %>
            <% end %> 
            <div class="card-body">
              <h5 class="card-title"> <%= "Delica #{bead.number}"%></h5>
            </div>
            <p>
              <%= link_to "Show this bead", bead, class: "btn btn-secondary" %>
            </p>
          </div> 
        </div>
      </div>
    <% end %>
  </div>
</div>
